    <script>
    function checkPass() {
        const input = document.getElementById('pass').value;
        const hash = btoa(input + 'ExZa2714@500Days').slice(0, 12);
        const correctHash = 'TmFhZ2luMDc';  // Naagin07 âœ“

        const error = document.getElementById('error');
        const content = document.getElementById('content');
        
        if (hash === correctHash) {
            document.querySelector('input, button, p:not(#error)').style.display = 'none';
            content.style.display = 'block';
        } else {
            error.textContent = 'ACCESS DENIED';
            document.getElementById('pass').value = '';
        }
    }
    
    document.getElementById('pass').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') checkPass();
    });
    </script>
